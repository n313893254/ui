<section class="header clearfix">
  <h1 class="pull-left text-capitalize">{{t 'monitorPage.header'}}</h1>
</section>

<section>
  <div class="row">
    <div class="col span-6 pt-0">
      <label class="acc-label">{{t 'monitorPage.retention.label'}}</label>
      {{input
          type="text"
          value=model.monitoring.retention
          classNames="form-control"
          placeholder=(t 'monitorPage.retention.placeholder')
      }}
    </div>
    <div class="col span-6">
      <label class="acc-label">{{t 'monitorPage.metricsServerEnabled.label'}}</label>
      <div class="radio">
        <label>
          {{radio-button selection=model.monitoring.metricsServerEnabled value=true}}
          {{t 'generic.enabled'}}
        </label>
      </div>
      <div class="radio">
        <label>
          {{radio-button selection=model.monitoring.metricsServerEnabled value=false}}
          {{t 'generic.disabled'}}
        </label>
      </div>
    </div>
  </div>
</section>


<section class="mt-10">
  {{#accordion-list showExpandAll=false as |al expandFn|}}
    {{#accordion-list-item
        title=(t 'monitorPage.pvcConfig.title')
        detail=(t 'monitorPage.pvcConfig.detail')
        expandAll=al.expandAll
        expand=(action expandFn)
        expandOnInit=false
    }}
      <div class="row">
        <div class="col span-6 pt-0">
          <label class="acc-label" for="">{{t 'monitorPage.pvcConfig.storageClassName.label'}}</label>
          {{input
              type="text"
              value=model.monitoring.pvcConfig.storageClassName
              classNames="form-control"
              placeholder=(t 'monitorPage.pvcConfig.storageClassName.placeholder')
          }}
        </div>
        <div class="col span-6 pt-0">
          <label class="acc-label" for="">{{t 'monitorPage.pvcConfig.volumeName.label'}}</label>
          {{input
              type="text"
              value=model.monitoring.pvcConfig.volumeName
              classNames="form-control"
              placeholder=(t 'monitorPage.pvcConfig.volumeName.placeholder')
          }}
        </div>
      </div>
      <div class="row">
        <div class="col span-6">
          {{form-access-modes
            model=model.monitoring.pvcConfig
            mode=mode
          }}
        </div>
      </div>
    {{/accordion-list-item}}
  {{/accordion-list}}
</section>

{{save-cancel createLabel="generic.save" save="save" cancel="cancel"}}
