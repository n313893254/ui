<section>
  {{#if (eq step 1)}}
    <i class="icon icon-spinner icon-spin"></i> {{t 'k8sPage.configFile.generating'}}
  {{/if}}
  {{#if (eq step 2)}}
    {{code-block language="yaml" code=kubeconfig collapsed=collapsed}}
    {{#if collapsed}}
      <div class="hand no-select poi text-center pb-5"><span {{action "togglePreview"}}>Click to expand inline <i class="icon {{if collapsed 'icon-chevron-down' 'icon-chevron-up'}}"></i></span></div>
    {{/if}}
    {{copy-to-clipboard tooltipText="" buttonText="copyToClipboard.tooltip" clipboardText=kubeconfig class="with-clip"}}
    <button {{action "download"}} class="btn">Download</button>
    <div class="mt-10 mb-0">
      <span>{{t 'k8sPage.configFile.usage.helpText' htmlSafe=true}}</span>
      <span>{{t 'k8sPage.configFile.usage.downloadText' downloadUrl=downloadUrl htmlSafe=true}}</span>
    </div>
    <p class="text-info text-small">We generated a kubeconfig for you which can be used with kubectl to interact with your cluster or something along the lines</p>
  {{/if}}
</section>
<div class="footer-actions">
  <button {{action "cancel"}} class="btn bg-primary close-kubeconfig">{{t 'generic.closeModal'}}</button>
</div>
