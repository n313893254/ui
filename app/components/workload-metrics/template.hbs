<section>
  {{metrics-action 
    resourceType="workload"
    workloadType=workload.type
    id=workload.name
    namespace=workload.namespaceId
    dashboards=dashboards
    queryAction="query"
    allowHide=true
    state=state
  }}
  {{#unless state.hide}}
    {{metrics-graph graphs=graphs loading=state.loading noGraphs=state.noGraphs}}
    <hr class="mt-30"/>
  {{/unless}}
</section>