<section class="header clearfix">
  <div class="pull-left pt-10"><h1>Receiver</h1></div>
</section>

<section>
  <div class="row">
    <div class="col span-12">
      <label class="acc-label">{{t 'hooksPage.NewOrEdit.name.label'}}{{field-required}}</label>
      {{input class="form-control"
              type="text"
              value=primaryResource.name
              placeholder=(t 'hooksPage.NewOrEdit.name.placeholder')
      }}
    </div>
  </div>
  <div class="row">
    <div class="col span-6">
      <label class="acc-label">{{t 'hooksPage.NewOrEdit.isScaleUp.label'}}</label>
      <div class="radio">
        <label>
          {{radio-button selection=primaryResource.isScaleUp value=false}}
          {{t 'generic.disabled'}}
        </label>
      </div>
      <div class="radio">
        <label>
          {{radio-button selection=primaryResource.isScaleUp value=true}}
          {{t 'generic.enabled'}}
        </label>
      </div>
    </div>
    <div class="col span-6">
      <label class="acc-label">{{t 'hooksPage.NewOrEdit.scaleStep.label'}}</label>
      <div>
        <div class="input-group pt-5 pl-10">
          {{input-slider
              value=primaryResource.scaleStep
              valueMin=1
              valueMax=11
              step=1
              disabled=(not primaryResource.isScaleUp)
          }}
          <span class="input-group-addon">{{primaryResource.scaleStep}}</span>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col span-6">
      <label class="acc-label">{{t 'hooksPage.NewOrEdit.minimumScale.label'}}</label>
      {{input-integer min=0 value=primaryResource.minimumScale disabled=(not primaryResource.isScaleUp)}}
    </div>
    <div class="col span-6">
      <label class="acc-label">{{t 'hooksPage.NewOrEdit.maximumScale.label'}}</label>
      {{input-integer min=0 value=primaryResource.maximumScale disabled=(not primaryResource.isScaleUp) max=100}}
    </div>
  </div>
  <div class="row">
    <div class="col span-6">
      <label class="acc-label">{{t 'hooksPage.NewOrEdit.tolerance.label'}}</label>
      <div class="input-group">
        {{input-integer min=0 value=primaryResource.tolerance}}
        <span class="input-group-addon bg-default">{{t 'generic.seconds'}}</span>
      </div>
    </div>
    <div class="col span-6">
      <label class="acc-label">{{t 'hooksPage.NewOrEdit.metricsType.label'}}</label>
      {{searchable-select
        class="form-control"
        content=metricsTypeContent
        value=primaryResource.metricsType
      }}
    </div>
  </div>
  <div class="row">
    <div class="col span-6">
      <label class="acc-label">{{t 'hooksPage.NewOrEdit.metricsCondition.label'}}{{field-required}}</label>
      {{input class="form-control"
              type="text"
              value=primaryResource.metricsCondition
              placeholder=(t 'hooksPage.NewOrEdit.metricsCondition.placeholder')
      }}
    </div>
  </div>
</section>

{{top-errors errors=errors}}

{{save-cancel editing=editing save="save" cancel="cancel"}}
